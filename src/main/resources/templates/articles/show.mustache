{{>layout/header}}
    <div class="container">
        <div class="jumbotron">
            <h1>Show Article</h1>
        </div>
    </div>
    {{#article}}
    <div class="container">
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">글번호</label>
                <input type="text" value="{{id}}" class="form-control col-sm-10" readonly="readonly">
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">글제목</label>
                <input type="text" value="{{title}}" class="form-control col-sm-10" readonly="readonly">
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">글내용</label>
                <input type="text" value="{{content}}" class="form-control col-sm-10" readonly="readonly">
            </div>
        </form>

        <a href="/articles/index" class="btn btn-primary">목록으로</a>

    </div>
    {{/article}}



{{>layout/footer}}