{{>layout/header}}
    <div class="container">
        <div class="jumbotron">
            <h1>Edit Article</h1>
        </div>
    </div>

    <div class="container">
        {{#article}}
        <form method="post" action="/article/update/{{id}}" class="d-inline">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">글번호</label>
                <input type="text" name="id" value="{{id}}" class="form-control col-sm-10" readonly="readonly">
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">글번호</label>
                <input type="text" name="title" value="{{title}}" class="form-control col-sm-10">
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">글내용</label>
                <input type="text" name="content" value="{{content}}" class="form-control col-sm-10">
            </div>

           <button class="btn btn-info">수정</button>

        </form>
        {{/article}}

        <a href="/" class="btn btn-danger">취소</a>
    </div>

{{>layout/footer}}